            </div>
        </div>
        <div class="copyright">
            <p>Â© 2023 Zomato Clone. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // DOM references
        const filterBtns = document.querySelectorAll('.filter-btn');
        const restaurants = document.querySelectorAll('.restaurant-card');
        const searchInput = document.querySelector('.search-bar input');
        const searchBtn = document.querySelector('.search-bar button');

        // Helper to show all cards
        function showAll() {
            restaurants.forEach(card => card.style.display = '');
        }

        // Filter functionality by cuisine (button text)
        filterBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                filterBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');

                const type = btn.textContent.trim().toLowerCase();
                if (type === 'all') {
                    showAll();
                    return;
                }

                restaurants.forEach(card => {
                    const cuisine = card.querySelector('.cuisine').textContent.toLowerCase();
                    if (cuisine.includes(type)) {
                        card.style.display = '';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });

        // Search functionality (matches name OR cuisine)
        function doSearch() {
            const query = searchInput.value.trim().toLowerCase();
            if (query === '') {
                // If empty, reapply active filter or show all
                const activeBtn = document.querySelector('.filter-btn.active');
                if (activeBtn && activeBtn.textContent.trim().toLowerCase() !== 'all') {
                    activeBtn.click();
                } else {
                    showAll();
                }
                return;
            }

            restaurants.forEach(card => {
                const name = card.querySelector('h3').textContent.toLowerCase();
                const cuisine = card.querySelector('.cuisine').textContent.toLowerCase();
                if (name.includes(query) || cuisine.includes(query)) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        searchBtn.addEventListener('click', doSearch);
        searchInput.addEventListener('keydown', (e) => {
            if (e.key === 'Enter') doSearch();
        });

        // Card click handler (ignore clicks on buttons/links)
        restaurants.forEach(card => {
            card.addEventListener('click', (e) => {
                if (e.target.closest('button') || e.target.closest('a')) return;
                const restaurantName = card.querySelector('h3').textContent;
                alert(`Opening restaurant page for ${restaurantName}`);
            });
        });
    </script>
</body>
</html>
