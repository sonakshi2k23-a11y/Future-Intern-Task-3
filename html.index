            <!-- Card 5 -->
            <div class="restaurant-card">
                <div class="card-image">
                    <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/1fc0f3b7-ca5b-4a42-8f1f-314f349c91af.png" alt="Mexican tacos">
